{
    "$schema": "https://turborepo.com/schema.json",
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**", "build/**"]
        },
        "typecheck": {
            "dependsOn": ["^typecheck"]
        },
        "lint": {},
        "format": {},
        "test": {
            "dependsOn": ["build"],
            "outputs": ["coverage/**"]
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "deploy": {
            "dependsOn": ["build"],
            "cache": false
        },
        "deploy:r2": {
            "dependsOn": ["build"],
            "cache": false
        }
    }
}
